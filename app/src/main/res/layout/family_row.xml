<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/familyRow"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:background="@drawable/family_card">

        <android.support.constraint.Guideline
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <android.support.constraint.Guideline
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.94" />

        <android.support.constraint.Guideline
            android:id="@+id/l5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.56" />

        <android.support.constraint.Guideline
            android:id="@+id/l6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.26" />

        <android.support.constraint.Guideline
            android:id="@+id/l7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.69" />

        <android.support.constraint.Guideline
            android:id="@+id/l8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.83" />

        <com.baharan.service.Widget.Text
            android:id="@+id/text41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="right"
            android:text="کد بیمه:"
            android:textColor="#208BC3"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/l2"
            app:layout_constraintTop_toTopOf="@+id/l8" />

        <com.baharan.service.Widget.Text
            android:id="@+id/text36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="right"
            android:text="کد ملی:"
            android:textColor="#208BC3"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/l8"
            app:layout_constraintEnd_toStartOf="@+id/l2"
            app:layout_constraintTop_toTopOf="@+id/l7"
            app:layout_constraintVertical_bias="0.0" />

        <com.baharan.service.Widget.Text
            android:id="@+id/text43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="right"
            android:text="نسبت:"
            android:textColor="#208BC3"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/l7"
            app:layout_constraintEnd_toStartOf="@+id/l2"
            app:layout_constraintTop_toTopOf="@+id/l5"
            app:layout_constraintVertical_bias="0.0" />

        <com.baharan.service.Widget.Text
            android:id="@+id/familyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="right"
            android:text="سیدمحمد فراهانی"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/l5"
            app:layout_constraintEnd_toStartOf="@+id/l2"
            app:layout_constraintTop_toTopOf="@+id/l6" />

        <com.baharan.service.Widget.Text
            android:id="@+id/familyCodeMelli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0020965788"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/l8"
            app:layout_constraintEnd_toStartOf="@+id/l1"
            app:layout_constraintTop_toTopOf="@+id/l7"
            app:layout_constraintVertical_bias="0.0" />

        <com.baharan.service.Widget.Text
            android:id="@+id/familyRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="فرزند"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/l7"
            app:layout_constraintEnd_toStartOf="@+id/l1"
            app:layout_constraintTop_toTopOf="@+id/l5"
            app:layout_constraintVertical_bias="0.0" />

        <com.baharan.service.Widget.Text
            android:id="@+id/familyInsuranceCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="12345678"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/l1"
            app:layout_constraintTop_toTopOf="@+id/l8" />

        <ImageButton
            android:id="@+id/deleteFamily"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#ffffff"
            android:backgroundTint="#09212B"
            android:scaleType="centerInside"
            android:src="@drawable/ic_remove"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>