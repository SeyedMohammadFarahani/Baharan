<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <android.support.constraint.Guideline
                android:id="@+id/l5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <android.support.constraint.Guideline
                android:id="@+id/l6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05" />

            <ImageView
                android:id="@+id/ivContactItem11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toStartOf="@+id/l5"
                app:layout_constraintTop_toBottomOf="@+id/stateSpinner"
                app:srcCompat="@drawable/ic_city" />

            <ImageView
                android:id="@+id/ivContactItem8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toStartOf="@+id/l5"
                app:layout_constraintTop_toBottomOf="@+id/fieldSpinner"
                app:srcCompat="@drawable/ic_doctor_name" />

            <ImageButton
                android:id="@+id/removeDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/fieldSpinner"
                app:srcCompat="@drawable/ic_remove" />

            <ImageView
                android:id="@+id/ivContactItem9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toStartOf="@+id/l5"
                app:layout_constraintTop_toBottomOf="@+id/hospitalSpinner"
                app:srcCompat="@drawable/ic_field" />

            <ImageView
                android:id="@+id/ivContactItem7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toStartOf="@+id/l5"
                app:layout_constraintTop_toBottomOf="@+id/citySpinner"
                app:srcCompat="@drawable/ic_hospital" />

            <com.baharan.service.Widget.Text
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="right"
                android:text="استان"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#3c8ce7"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/ivContactItem10"
                app:layout_constraintTop_toTopOf="@+id/l6" />

            <com.baharan.service.Widget.Text
                android:id="@+id/location4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="right"
                android:text="مرکز درمانی"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#3c8ce7"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/ivContactItem7"
                app:layout_constraintTop_toBottomOf="@+id/citySpinner" />

            <com.baharan.service.Widget.Text
                android:id="@+id/location3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="right"
                android:text="تخصص"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#3c8ce7"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/ivContactItem9"
                app:layout_constraintTop_toBottomOf="@+id/hospitalSpinner" />

            <com.baharan.service.Widget.Text
                android:id="@+id/location5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="right"
                android:text="نام پزشک"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#3c8ce7"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/ivContactItem8"
                app:layout_constraintTop_toBottomOf="@+id/fieldSpinner" />

            <com.baharan.service.Widget.Text
                android:id="@+id/location2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="right"
                android:text="شهرستان"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#3c8ce7"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/ivContactItem11"
                app:layout_constraintTop_toBottomOf="@+id/stateSpinner" />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/stateSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/location_back"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textDirection="rtl"
                app:layout_constraintEnd_toStartOf="@+id/l5"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/location"
                app:spinnerDirection="rtl"
                tools:layout_editor_absoluteY="110dp" />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/citySpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/location_back"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textDirection="rtl"
                app:layout_constraintEnd_toStartOf="@+id/l5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/location2"
                app:spinnerDirection="rtl" />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/hospitalSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/location_back"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textDirection="rtl"
                app:layout_constraintEnd_toStartOf="@+id/l5"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/location4"
                app:spinnerDirection="rtl"
                tools:layout_editor_absoluteY="110dp" />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/fieldSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/location_back"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textDirection="rtl"
                app:layout_constraintEnd_toStartOf="@+id/l5"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/location3"
                app:spinnerDirection="rtl"
                tools:layout_editor_absoluteY="110dp" />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/doctorSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/location_back"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textDirection="rtl"
                app:layout_constraintEnd_toStartOf="@+id/l5"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/location5"
                app:spinnerDirection="rtl"
                tools:layout_editor_absoluteY="110dp" />

            <ImageView
                android:id="@+id/ivContactItem10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:layout_constraintEnd_toStartOf="@+id/l5"
                app:layout_constraintTop_toTopOf="@+id/l6"
                app:srcCompat="@drawable/ic_location_on_black" />

            <com.baharan.service.Widget.Btn
                android:id="@+id/searchButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/search_back"
                android:drawableRight="@drawable/ic_search"
                android:elevation="@dimen/_4sdp"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="جست و جو  "
                android:textColor="#ffffff"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/l5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/doctorSpinner" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/transferPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"
            tools:ignore="DuplicateIds" />

        <android.support.constraint.Guideline
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_185sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/sad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/l2"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="@+id/l1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.235" />

        <com.baharan.service.Widget.Text
            android:id="@+id/text22"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/transfer"
            android:textColor="#b0b0b0"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/l2"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="@+id/l1"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.13" />

        <com.baharan.service.Widget.Text
            android:id="@+id/goTo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:drawableRight="@drawable/ic_myforward"
            android:gravity="center"
            android:padding="2dp"
            android:text=" رفتن به صفحه‌ی کاربری"
            android:textColor="#4a90e2"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/l2"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/l1"
            app:layout_constraintTop_toBottomOf="@+id/text22" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>