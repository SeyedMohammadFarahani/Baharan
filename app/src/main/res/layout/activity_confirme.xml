<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ConfirmedActivity">


    <com.baharan.service.Widget.Text
        android:id="@+id/confirmedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        android:textColor="#212121"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold" />

    <com.baharan.service.Widget.EditTxt
        android:id="@+id/confirmedEditText"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/edittext_back"
        android:drawableRight="@drawable/ic_confirme"
        android:gravity="center"
        android:hint="_ _ _ _"
        android:inputType="numberDecimal"
        android:letterSpacing="0.2"
        android:maxLength="4"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:textColor="#646464"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />

    <com.baharan.service.Widget.Btn
        android:id="@+id/confirmedButton"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/register_button"
        android:gravity="center"
        android:text="تایید و ادامه"
        android:textColor="#ffffff"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/l1"
        app:layout_constraintTop_toBottomOf="@+id/confirmedEditText" />


    <com.baharan.service.Widget.Text
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:textColor="#027ecc"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold" />

    <com.baharan.service.Widget.Text
        android:id="@+id/again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="ارسال مجدد"
        android:textColor="@color/red"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>

