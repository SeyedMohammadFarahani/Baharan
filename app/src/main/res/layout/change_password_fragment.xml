<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.baharan.service.Widget.Text

        android:id="@+id/appCompatTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        android:text="تغییر رمز‌عبور"
        android:textColor="#212121"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <com.baharan.service.Widget.Text
        android:id="@+id/appCompatTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:text="@string/changePassword"
        android:textColor="#212121"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold" />



    <com.baharan.service.Widget.EditTxt
        android:id="@+id/changePassEditText"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/edittext_back"
        android:drawableEnd="@drawable/ic_lock"
        android:drawableRight="@drawable/ic_lock"
        android:gravity="center"
        android:hint="رمز‌عبور جدید"
        android:inputType="textPassword"
        android:maxLength="10"
        android:paddingRight="8dp"
        android:shadowColor="#41000000"
        android:singleLine="true"
        android:textColor="#646464"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold" />

    <se.aaro.gustav.passwordstrengthmeter.PasswordStrengthMeter xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/newPassMeter"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layoutDirection="rtl"
        app:animateChanges="true"
        app:animationDuration="300"
        android:layout_gravity="center"
        app:labelTextSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/l2"
        app:layout_constraintStart_toStartOf="@+id/l1"
        app:layout_constraintTop_toBottomOf="@+id/changePassEditText"
        app:showStrengthBar="true"
        app:showStrengthLabel="true"
        app:strengthBarHeight="5dp" />

    <com.baharan.service.Widget.EditTxt
        android:id="@+id/confirmedPassEditText"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittext_back"
        android:drawableEnd="@drawable/ic_confirm_pass"
        android:drawableRight="@drawable/ic_confirm_pass"
        android:gravity="center"
        android:hint="تکرار رمز‌عبور"
        android:inputType="textPassword"
        android:maxLength="30"
        android:paddingRight="8dp"
        android:shadowColor="#41000000"
        android:singleLine="true"
        android:textColor="#646464"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold" />


    <com.baharan.service.Widget.Btn
        android:id="@+id/changePassButton"
        android:layout_gravity="center"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/register_button"
        android:gravity="center"
        android:text="تغییر رمز‌عبور"
        android:textColor="#ffffff"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />


</LinearLayout>